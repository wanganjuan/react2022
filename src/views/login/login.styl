.login-bg
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background url('./img/login-bg.png') no-repeat center
  background-size cover
  text-align: left
  // min-height 620px
.login-content
  position: absolute;
  top: 50%;
  left: 50%;
  width: 714px;
  height: 448px;
  margin: -230px 0 0 -358px;
  background url('./img/login-content.png') no-repeat center
  .login-content-detail
    margin-left 370px
    margin-top 41px
    padding 60px 30px
    .login-title
      display flex
      font-size 22px
      color #2072f5
      align-items center
      height 24px
      line-height 24px
    .login-en
      margin-left 12px
      font-size 20px
      border-top 1px solid #d6d6d6
      border-bottom 1px solid #d6d6d6
      color #d6d6d6
  .login-main
    margin-top 34px
    font-size 14px
    .input-p
      border: 1px solid #dcdfe6;
      box-sizing: border-box;
      height: 38px;
      width: 282px;
      line-height: 36px;
      padding: 0 15px 0 48px;
      outline: none;
      border-radius: 4px 0 0 4px;
    input
      width 100%
      height 34px
      outline: none;
    .user
      background url('./img/login-user.png') no-repeat 14px center
    .password
      margin-top 20px
      background url('./img/login-pw.png') no-repeat 14px center
    .check-ope
      cursor pointer
      margin-top 15px
      color #666666
      padding-left 26px
      height 18px
      line-height 18px
      background url('./img/check-off.png') no-repeat 2px center
      transition all .3s ease
      &.active
        background url('./img/check-on.png') no-repeat 2px center
  .login-button
    margin-top 22px
    height 44px
    background url('./img/login-button.png') no-repeat 1px center
    cursor pointer
    width: 282px;
  .login-button.disabled
    background #7bb4ee
    color #fff
    text-align center
    line-height 44px
    cursor not-allowed
    border-radius 2px
.star-title
  line-height: 22px;
  color: #333333;
  padding-bottom: 16px;